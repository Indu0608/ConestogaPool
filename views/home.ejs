              <br>
            </div>
          </div>
        <%} else {%>
          <div class="landing-buttons text-center">
            <form action="/login" method="get">
              <button class='btn btn-lg btn-dark col-md-3' type="submit">Login</button>
            </form>
            <form action="/register" method="get">
              <button class='btn btn-lg btn-outline-dark col-md-3' type="submit">Register</button>
            </form>
          </div>
        <%}%>
       <%} else {%>
