<%- include('partials/header') -%>
    <h1>Login Screen</h1>
    <form action='/login' method='post' class='fluid' class="login-form">
        <div class='row'>
          <div class='col fluid-form form-floating mb-3'>
            <div class="form-group col-md-6">
              <label for="userName">User name</label>
              <input type="text" id="userName" class='form-control' name='userName' placeholder="Username" autofocus required>
            </div>
            <div class="form-group col-md-6">
              <label for="userpassword">Password</label>
              <input id='userpassword' type="password" class='form-control' name='password' placeholder="Password" required>
            </div>
            <button class='btn btn-lg btn-outline-dark col-md-3' type="submit">Login</button>
          </div>
        </div>
    </form>
  <%- include('partials/footer') -%>

